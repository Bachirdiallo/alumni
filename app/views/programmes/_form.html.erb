<%= form_for(@programme) do |f| %>
  <% if @programme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@programme.errors.count, "error") %> prohibited this programme from being saved:</h2>
      <ul>
        <% @programme.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-success">
    <div class="panel-heading"><strong>New Programme</strong></div>
    <div class="panel-body">
        <div class="col-md-6" >
          <%= f.text_field :name, placeholder: 'Name', autofocus: true, autocomplete: "off" %>
        </div>

        <div class="col-md-3">
          Faculty: <%= f.select :faculty_id, options_for_select(Faculty.all.collect {|p| [p.name,p.id] }) %>
        </div>

        <div class="col-md-3">
          <%= f.submit "Save", :class => 'btn-u'%>
          <%= link_to 'Back', programmes_path, :class => 'btn-u btn-u-default' %>
        </div>
    </div>
  </div>
<% end %>
