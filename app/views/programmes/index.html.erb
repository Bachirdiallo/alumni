
<div class="container col-sm-8">
  <p id="notice"><%= notice %></p>

  <h1>Programmes</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th colspan="3">Programme Name</th>
      </tr>
    </thead>

    <tbody>
      <% @programmes.each do |programme| %>
        <tr>
          <td><%= programme.name %></td>

          <td><%= link_to 'Edit', edit_programme_path(programme) %></td>
          <td><%= link_to 'Destroy', programme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Programme', new_programme_path, :class => 'btn btn-primary btn-flat'%>
</div>
