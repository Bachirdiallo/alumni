
  <div class=" container-top">
    <% if !notice.nil? %>
      <div class="alert alert-info fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <strong><%= notice %></strong>
      </div>
    <%end%>
    <div class="pull-left">
      <h2>Programmes</h2>
    </div>
    <div class="col-md-2 pull-right" style="padding-top: 5px">
      <%= link_to new_programme_path, title: 'Add Programme',  :class => 'btn-u btn-u-light-green rounded pull-right' do%>
        <span class="fa fa-plus"></span>
      <%end%>
    </div>
  </div>

  <div class="main-content">
    <br>
    <table class="table table-hover">
      <tbody>
        <% if @programmes.any? %>
          <% @programmes.each do |programme| %>
            <tr>
              <td style="padding-top: 30px">
                <%= programme.name %>
              </td>
              <td style="padding-top: 30px">
                <%= link_to edit_programme_path(programme),  style: 'color: grey', class: 'pull-right' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
              </td>
              <td style="padding-top: 30px">
                <%= link_to programme, class: 'pull-right', style: 'color: grey', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
