<div class="col-sm-9">
  <p id="notice"><%= notice %></p>
  <p>
    <h3><%= @announcement.title %></h3>
  </p>
  <p>
    <%= @announcement.content %>
  </p>
  <% if user_signed_in?%>
    <% if !current_user.is_graduate? %>
      <%= link_to 'Edit', edit_announcement_path(@announcement), :class => 'btn btn-primary btn-md' %>
      <%= link_to 'Back', announcements_path, :class => 'btn btn-primary btn-md' %>
    <% end %>
  <% end %>

</div>
<style media="screen">
  h3{color: #009688}
</style>
