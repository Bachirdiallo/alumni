<div class="col-sm-9">
  <%= form_for(@announcement) do |f| %>
    <% if @announcement.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

        <ul>
        <% @announcement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-control-wrapper" >
      <%= f.text_field :title, :class => 'form-control empty' %>
      <div class="floating-label">Title</div>
        <span class="material-input"></span>
    </div>
    <div class="form-control-wrapper">
      <%= f.bootsy_area :content, :class => 'form-control empty', :placeholder => 'Content' %>
    </div>
      <%= f.submit "Post Announcement", :class => 'btn btn-primary btn-md' %>
      <%= link_to 'Back', announcements_path, :class => 'btn btn-primary btn-md' %>
  <% end %>
</div>
