<div class="col-sm-9">
<p id="notice"><%= notice %></p>



<ul class="nav nav-tabs" style="background-color: #ccc;">
  <li class="active a"><%= link_to 'New Announcement', announcements_path%></li>
  <li><%= link_to 'Carousel', carousels_path%></li>
</ul>
<br>
<div class="col-sm-12">
    <div class="col-sm-4">
      <h4>Announcements</h4>
    </div>
    <div class="col-sm-4">

    </div>
    <div class="col-sm-4">
    <%= link_to 'New Announcement', new_announcement_path, :class => 'btn btn-primary btn-flat' %>
    </div>

</div>
<table class="table table-striped table-hover ">
  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td>
          <%= announcement.created_at.strftime("%B") %>
          <%= announcement.created_at.strftime("%Y") %>
        </td>
        <td><%= link_to  announcement  do %> <span class="fa fa-eye"></span><%end%></td>
        <td><%= link_to edit_announcement_path(announcement) do %> <span class="fa fa-pencil-square-o"></span><%end%></td>
        <td><%= link_to announcement, method: :delete, data: { confirm: 'Are you sure?' } do %> <span class="fa fa-times"></span><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<style media="screen">
  h3{color: #009688}
  .a{color: #000}
</style>
