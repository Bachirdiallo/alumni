<div class="content-side-right">
  <div class="container ">
    <div class="col-md-9">
      <ul class="nav nav-tabs  margin-bottom-40" style="background-color: #ccc;">
        <li class="active">
          <%= link_to 'Announcements', announcements_path%></li>
        <li><%= link_to 'Carousel', carousels_path%></li>
      </ul>
      <div class=" col-sm-12 margin-bottom-40">
        <% if !notice.nil? %>
          <div class="alert alert-info fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <strong><%= notice %></strong>
          </div>
        <%end%>
        <div class="pull-left">
          <h2>Announcements</h2>
        </div>
        <div class="col-sm-2 pull-right">
          <%= link_to 'New Post', new_announcement_path,  :class => 'btn-u btn-u-light-green rounded' %>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <% if @announcements.any? %>
        <% @announcements.each do |announcement| %>
        <div class="lv-item item">

            <div class="col-md-4 ">
                <%= announcement.title%>
            </div>
            <div class="col-md-4 ">
              <%= announcement.created_at.strftime("%B") %>
              <%= announcement.created_at.strftime("%Y") %>
            </div>
            <div class="col-md-2">
              <%= link_to edit_announcement_path(announcement), class: 'pull-right link' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
            </div>
            <div class="col-md-2 pull-right">
              <%= link_to announcement, class: 'pull-right link', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
            </div>
            <br>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
