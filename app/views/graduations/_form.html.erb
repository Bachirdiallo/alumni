<%= search_form_for @users do |f| %>
  <div class="col-sm-3">
    <div class="form-control-wrapper">
      <%= f.search_field :user_name_cont, :class => 'form-control empty', :autocomplete => "off" %>
      <div class="floating-label">Name </div>
        <span class="material-input"></span>
    </div>
  </div>
  <div class="col-sm-3">
    Class:<br><%= f.select :batch_id_eq, [""]+Batch.all.map{|p| ["#{p.month} / #{p.year}", p.id] }%>
  </div>
  <div class="col-sm-3">
    Programme: <%= f.select :programme_id_eq, [""]+Programme.all.map{|p| [p.name, p.id]} %>
  </div>
  <div class="col-sm-3">
    <%= f.submit "Search", :class => 'btn btn-primary btn-sm' %>
  </div>
<% end %>
