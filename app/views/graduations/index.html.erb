<div class="container col-sm-8">
  <p id="notice"><%= notice %></p>

  <h1>Listing Graduations</h1>

  <%= render 'form' %>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Class</th>
        <th>Programme</th>
      </tr>
    </thead>

    <tbody>
      <% @graduations.each do |graduation| %>
        <tr>
          <td>
              <%if !graduation.user.nil?%>
              <%= graduation.user.name %>
            <% else %>
                N/A
            <% end %>
          </td>
          <td>
            <%if !graduation.batch.nil? %>
              <%= graduation.batch.month %>
              <%= graduation.batch.year %>
            <% else %>
                N/A
            <% end %>
          </td>
          <td>
            <%if !graduation.programme.nil?%>
              <%= graduation.programme.name %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td><%= link_to 'Destroy', graduation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
