<div class="image-block">
  <div class="container">
    <div class="company-description">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <h4>Please enter your email address, we will send you the reset password link to your email</h4>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-control-wrapper">
              <%= f.email_field :email, :autocomplete => "off", placeholder: 'Email Address',  autofocus: true, :class => 'form-control empty' %>
            </div>

            <div class="pull-right">
              <br>
              <%= f.submit "Reset", class: "btn-u" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
