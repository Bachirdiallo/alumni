<div class="image-block">
    <div class="container">
      <% if !notice.nil? %>
        <div class="company-description">
          <div class="alert alert-info fade in ">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <strong><%= notice %></strong>
          </div>
        </div>
      <% end %>

        <div class="company-description">
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <%= search_form_for @q , url:change_claim_index_path(student_id: params[:q]) do |f| %>
                <div class="reg-header">
                    <h4>Redem your account</h4>
                </div>
                <div class="form-group">
                  <%= f.search_field :id_number_eq, :class => 'form-control empty', placeholder: 'Id Number', :autocomplete => "off" %>
                </div>
                <div class="form-group">
                  <%= f.search_field :student_id_eq, :class => 'form-control empty', placeholder: 'Student Id', :autocomplete => "off" %>
                </div>
                <div class="form-group">
                  <%= f.search_field :alumni_key_eq, :class => 'form-control empty', placeholder: 'Alumni Id', :autocomplete => "off" %>
                  <small style="color: red" class="pull-left">Please fill up the second form if you do not know your alumni id </small> <br>
                </div>
                <div class="form-group">
                  <%= f.search_field :name_eq, :class => 'form-control empty', placeholder: 'Full name as in your passport', :autocomplete => "off" %>
                </div>
                <%= f.submit "Find", :class => 'btn btn-primary btn-flat rounded', style: 'width: 100%' %>
             <% end %>
           </div>
         </div>
       </div>

    <div class="company-description">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <%= render partial: 'request_form' %>
       </div>
     </div>
   </div>
</div>
