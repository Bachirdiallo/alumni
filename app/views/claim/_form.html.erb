
  <%= form_for @user, url: claim_path(id: @user.id) , class: 'sky-form' do |f|%>
    <div class="form-group">
      <small style="color: red" class="pull-left">Please ensure the password is at least 8 characters in length.</small>
      <%= f.password_field :password, :class => 'form-control empty', placeholder: 'New password', :autocomplete => "off" %>
    </div>

    <div class="form-group">
      <small style="color: red" class="pull-left">Please ensure the password is at least 6 characters in length.</small>
      <%= f.password_field :password, :class => 'form-control empty', placeholder: 'New password', :autocomplete => "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", :action=>"update", :class => 'btn btn-primary btn-flat' %>
    </div>
  <% end %>
