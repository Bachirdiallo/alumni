<div class="container col-sm-8">
  <%= semantic_form_for(@job) do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-control-wrapper" >
      <%= f.text_field :title, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
      <div class="floating-label">Job title</div>
        <span class="material-input"></span>
    </div>

    <div class="form-control-wrapper" >
      <%= f.text_field :company, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
      <div class="floating-label">Company</div>
        <span class="material-input"></span>
    </div>

    <div class="form-control-wrapper" >
      <%= f.text_field :city, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
      <div class="floating-label">City</div>
        <span class="material-input"></span>
    </div>

    <div class="form-control-wrapper" >
      <%= f.text_field :country, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
      <div class="floating-label">Country</div>
        <span class="material-input"></span>
    </div>

    <div>
      Current
      <%= f.check_box :current %>
    </div>

    <div class="dropdown " >
      <%= f.input :from, :as => :date_select, :discard_year => false, :start_year => 1995,  :end_year => Date.current.year, :order => [:month, :year], :discard_day => true, :class => 'form-control' %>
    </div>

    <div class="form-control-wrapper" >
      <%= f.input :to, :as => :date_select, :discard_month => false, :start_year => 1995,  :end_year => Date.current.year,  :order => [:month, :year], :discard_day => true, :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Add Job", :class => 'btn btn-primary btn-flat' %>
    </div>
    <% end %>
</div>
