<div class="container content">
    <p id="notice"><%= notice %></p>
    <h3><%= @event.title.html_safe %></h3>
    <p><%= @event.description.html_safe %></p>
    <p><%= @event.date.strftime("%B") %> <%= @event.date.strftime("%Y") %></p>

    <% if user_signed_in?%>
      <% if !current_user.is_graduate? %>
        <%= link_to 'Edit', edit_event_path(@event), :class => 'btn btn-primary btn-md' %>
        <%= link_to 'Back', events_path, :class => 'btn btn-primary btn-md' %>
      <% end %>
    <% end %>
  </div>
