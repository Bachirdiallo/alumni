
<div class="container-top">
  <% if !notice.nil? %>
    <div class="alert alert-info fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong><%= notice %></strong>
    </div>
  <%end%>
  <div class="pull-left">
    <h2>Events</h2>
  </div>

  <div class="col-md-2 pull-right" style="padding-top: 5px">
    <%= link_to new_event_path, title: "New Event", :class => 'btn-u btn-u-light-green rounded ' do%>
      <span class="fa fa-plus"></span>
    <%end%>
  </div>
</div>


  <div class="main-content">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="lv-item item">
            <div class="col-md-4 ">
                <%= event.title%>
            </div>

            <div class="col-md-4 ">
              <%= event.created_at.strftime("%B %Y") %>
              <%= event.date.strftime("%B %Y") %>
            </div>

            <div class="col-md-2">
              <%= link_to edit_event_path(event), class: 'pull-right link' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
            </div>

            <div class="col-md-2 pull-right">
              <%= link_to event, class: 'pull-right link', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
