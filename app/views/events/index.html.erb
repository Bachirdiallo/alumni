<div class="col-sm-9">
<p id="notice"><%= notice %></p>
<h3>Listing Events</h3>
<table  class="table table-striped table-hover ">
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><b><%= event.title %></b></td>
        <td><%= event.date.strftime("%B") %> <%= event.date.strftime("%Y") %></td>
        <td><%= link_to  event do %><span class="fa fa-eye"></span><% end %></td>
        <td><%= link_to  edit_event_path(event) do %><span class="glyphicon glyphicon-edit"></span><% end %></td>
        <td><%= link_to  event, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Create Event', new_event_path, :class => 'btn btn-primary btn-md' %>
</div>

<style media="screen">
  h3{color: #009688}
</style>
