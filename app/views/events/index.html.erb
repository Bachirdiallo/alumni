<div class="content-side-right">
  <div class="container ">
    <div class="col-md-9">
      <div class=" col-md-12 margin-bottom-40">
        <% if !notice.nil? %>
          <div class="alert alert-info fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <strong><%= notice %></strong>
          </div>
        <%end%>
        <div class="pull-left">
          <h2>Events</h2>
        </div>

        <div class="col-md-2 pull-right">
          <%= link_to 'Create Event', new_event_path, :class => 'btn-u btn-u-light-green rounded' %>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <% if @events.any? %>
        <% @events.each do |event| %>
          <div class="lv-item item">
            <div class="col-md-4 ">
                <%= event.title%>
            </div>

            <div class="col-md-4 ">
              <%= event.created_at.strftime("%B %Y") %>
              <%= event.date.strftime("%B %Y") %>
            </div>

            <div class="col-md-2">
              <%= link_to edit_event_path(event), class: 'pull-right link' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
            </div>

            <div class="col-md-2 pull-right">
              <%= link_to event, class: 'pull-right link', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
