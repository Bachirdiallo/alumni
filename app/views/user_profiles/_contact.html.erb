<% if @user.contact_privacy_option != "Only Me" %>
  <%if @user.contact_privacy_option == "My Batch"%>
      <% if @user.graduations.map { |b| b.batch} & current_user.graduations.map { |s| s.batch }%>
          <p><%= @user.city%>, <%= @user.country%></p>
          <% if !@user.phone.nil? %>

            <div class="col-sm-1 pad">
              <i class="fa fa-phone"></i>
            </div>
            <div class="col-sm-11 pad">
              <%= @user.phone %>
            </div>
            <% else %>
                N/A
            <% end %>

            <% if !@user.email.nil?%>
              <div class="col-sm-1 pad">
                <i class="fa fa-envelope-o"></i>
              </div>
              <div class="col-sm-11 pad">
                <%= @user.email%>
              </div>
            <% else %>
                N/A
            <% end %>
      <% end %>
  <%elsif @user.contact_privacy_option == "My Programme"%>
    <% if @user.graduations.map { |p| p.programme  }& current_user.graduations.map { |p| p.programme  } %>
    <p><%= @user.city%>, <%= @user.country%></p>
    <% if !@user.phone.nil? %>
      <div class="col-sm-1 pad">
        <i class="fa fa-phone"></i>
      </div>
      <div class="col-sm-11 pad">
        <%= @user.phone %>
      </div>
      <% else %>
          N/A
      <% end %>

      <% if !@user.email.nil?%>
        <div class="col-sm-1 pad">
          <i class="fa fa-envelope-o"></i>
        </div>
        <div class="col-sm-11 pad">
          <%= @user.email%>
        </div>
      <% else %>
          N/A
      <% end %>
        <% end %>
      <%else%>
      <p><%= @user.city%>, <%= @user.country%></p>
      <% if !@user.phone.nil? %>

        <div class="col-sm-1 pad">
          <i class="fa fa-phone"></i>
        </div>
        <div class="col-sm-11 pad">
          <%= @user.phone %>
        </div>
        <% else %>
            N/A
        <% end %>

        <% if !@user.email.nil?%>
          <div class="col-sm-1 pad">
            <i class="fa fa-envelope-o"></i>
          </div>
          <div class="col-sm-11 pad">
            <%= @user.email%>
          </div>
        <% else %>
            N/A
        <% end %>
  <% end %> <!--if contact_privacy_otpion == My Batch -->
<% end %><!--if social != Only Me -->
