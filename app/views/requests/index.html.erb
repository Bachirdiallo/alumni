<div class="content-side-right">
  <div class="container content">

    <div class="col-md-9">
      <div class=" col-md-12 margin-bottom-40">
        <% if !notice.nil? %>
          <div class="alert alert-info fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <strong><%= notice %></strong>
          </div>
        <%end%>
        <div class="pull-left">
          <h2>Account Requests</h2>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <% @requests.each do |request| %>
        <div class="lv-item item">

            <div class="col-md-4 ">
              <strong><%= link_to request.name, request_path(request.id) , style: 'color: #4285F4'%></strong>
              <br>
              <strong>Requested Date: </strong><%= request.created_at.strftime("%D") %>
            </div>
            <div class="col-md-4">

            </div>
            <div class="col-md-4 pull-right">
              <%= link_to request, class: 'pull-right link', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
            </div>
            <br>
          </div>

      <% end %>
    </div>
  </div>
</div>
