<div class="container col-sm-8">
<p id="notice"><%= notice %></p>

<h1>Listing Faculties</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Remove</th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.name %></td>
        <td><%= link_to edit_faculty_path(faculty) do %><span class="glyphicon glyphicon-edit"></span> <% end %></td>
        <td><%= link_to faculty, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faculty', new_faculty_path, :class => 'btn btn-primary btn-flat' %>
</div>
