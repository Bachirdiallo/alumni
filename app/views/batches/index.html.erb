<div class="container col-sm-8">
    <strong><%= notice %></strong>

  <h1>Listing Batches</h1>

  <div id="file_uploader">
    <%= render partial: 'import/file_uploader',  locals: {:klass => Graduation}%>
  </div>

  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Class</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @batches.each do |batch| %>
        <tr>
          <td>
            <% if !batch.month.nil? && !batch.year.nil?%>
              <%= batch.month%> / <%= batch.year %>
            <% end %>
          </td>
          <td><%= link_to edit_batch_path(batch) do %><span class="glyphicon glyphicon-edit"></span> <% end %></td>
          <td><%= link_to batch, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span> <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @batches %>
  <br>
  <%= link_to 'New Batch', new_batch_path, :class => 'btn btn-primary btn-flat' %>
</div>
