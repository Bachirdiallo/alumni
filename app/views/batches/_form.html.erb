<%= semantic_form_for @batch do |f| %>
  <% if @batch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@batch.errors.count, "error") %> prohibited this batch from being saved:</h2>

      <ul>
      <% @batch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-success">
    <div class="panel-heading"><strong>New Batch</strong></div>
    <div class="panel-body">
      <div class="col-sm-4">
        <%= f.input :month, as: :select, :collection => Batch::MONTHS.first(Batch::MONTHS.size()) %>
      </div>

      <div class="col-sm-4">
        <%= f.input :year, :as => :date_select, :start_year => 1995,  :end_year => Date.current.year, :discard_month => true, :discard_day => true %>
      </div>

      <div class="col-sm-4">
        <br>
        <%= f.submit :class => 'btn-u' %>
        <%= link_to 'Back', batches_path, :class => 'btn btn-u-default btn-u' %>
      </div>
    </div>
  </div>
<% end %>
