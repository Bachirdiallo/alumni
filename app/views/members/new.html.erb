
<div class="container center well" style="width: 40%">
  <h3>Add a new user</h3>
<%= form_for(@user, url: members_path) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-dismissable alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control-wrapper" >
    <%= f.text_field :name, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
    <div class="floating-label">Name</div>
      <span class="material-input"></span>
  </div>

  <div class="form-control-wrapper" >
    <%= f.text_field :student_id, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
    <div class="floating-label">Id </div>
      <span class="material-input"></span>
  </div>

  <div class="form-control-wrapper">
    <%= f.email_field :email, autofocus: true, autocomplete: "off", :class => 'form-control empty' %>
    <div class="floating-label">Email </div>
      <span class="material-input"></span>
  </div>

  <div class="form-control-wrapper">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control empty' %>
    <div class="floating-label">Password </div>
      <span class="material-input"></span>
  </div>

  <div class="form-control-wrapper">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control empty' %>
    <div class="floating-label">Confirm password </div>
      <span class="material-input"></span>
  </div>

  <div class="field">
    <%= f.submit "Create", :class => 'btn btn-primary btn-flat' %>
  </div>


<% end %>


<%= link_to 'Back', members_path, :class => 'btn btn-primary btn-flat' %>
</div>
