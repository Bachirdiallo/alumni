<div class="content-side-right">
  <div class="container content">
    <div class="col-md-9">
      <div class=" col-md-12 margin-bottom-40">
        <% if !notice.nil? %>
          <div class="alert alert-info fade in">
            <p id="notice"><%= notice %></p>
          </div>
        <%end%>
        <div class="pull-left">
          <h2>Admin</h2>
        </div>
        <div class="col-md-2 pull-right">
          <%= link_to 'New User', new_member_path,  :class => 'btn btn-primary btn-sm pull-right' %>
        </div>
      </div>
    </div>

    <div class="col-md-9">
      <% if @users.any? %>
        <% @users.each do |user| %>
          <% if !user.is_graduate && !user.is_employer%>
          <div class="lv-item item">
            <div class="col-md-2" style="padding-left: 0px">
              <%= user.student_id%>
            </div>
            <div class="col-md-3" style="padding-left: 0px">
              <%= user.name%>
            </div>
            <div class="col-md-3" style="padding-left: 0px">
              <%= user.email%>
            </div>
            <div class="col-md-2 ">
              <%= link_to edit_member_path(user),  style: 'color: grey', class: 'pull-right' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
            </div>
            <div class="col-md-2 pull-right">
              <%= link_to member_path(id: user.id), class: 'pull-right', style: 'color: grey', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
            </div>
            <br>
          </div>
          <% end %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
