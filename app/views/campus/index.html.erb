    <div class="container-top">
      <% if !notice.nil? %>
        <div class="alert alert-info fade in">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <strong><%= notice %></strong>
        </div>
      <%end%>
      <div class="pull-left">
        <h3>Campuses</h3>
      </div>
      <div class="col-md-2 pull-right" style="padding-top: 5px">
        <%= link_to  new_campu_path, title: "New Campus", :class => 'btn-u btn-u-light-green btn-sm pull-right' do%>
          <span class="fa fa-plus"></span>
        <%end%>
      </div>
    </div>

    <div class="main-content">
      <br>
      <table class="table table-hover">
        <tbody>
          <% if @campus.any? %>
            <% @campus.each do |campu| %>
              <tr>
                <td style="padding-top: 30px">
                  <%= campu.name%>
                </td>
                <td style="padding-top: 30px">
                  <%= link_to edit_campu_path(campu),  style: 'color: grey', class: 'pull-right' do %><span class="glyphicon glyphicon-pencil"></span> <% end %>
                </td>
                <td style="padding-top: 30px">
                  <%= link_to campu, class: 'pull-right', style: 'color: grey; padding-right: 5px', method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash-o"></span> <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
