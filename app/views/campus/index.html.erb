<div class="container col-sm-8">
<p id="notice"><%= notice %></p>

<h1>Listing Campus</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Remove</th>
    </tr>
  </thead>

  <tbody>
    <% @campus.each do |campu| %>
      <tr>
        <td><%= campu.name %></td>
        <td><%= link_to edit_campu_path(campu) do %><span class="glyphicon glyphicon-edit"></span> <% end %></td>
        <td><%= link_to campu, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campus', new_campu_path, :class => 'btn btn-primary btn-flat' %>
</div>
